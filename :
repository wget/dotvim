redir => s:versionRedirected
    silent version
redir END

let s:splitted = split(s:versionRedirected)

let s:i = 0
for j in s:splitted
    if (j ==# "system") && (get(s:splitted, s:i + 1) ==# "vimrc") && get(s:splitted, s:i + 2) =~ "file:"
        let s:systemVimrcLocation = get(s:splitted, s:i + 3)
    endif

    let s:i += 1
endfor
unlet s:splitted

let s:systemVimrcLocation = ''
let s:temp = split(s:systemVimrcLocation, '\zs')
let s:stringSize = strlen(s:systemVimrcLocation) - 1
let s:i = 1
while s:i < s:stringSize 
    let s:systemVimrcLocation .= get(s:temp, s:i)
    let s:i += 1
endwhile
unlet s:i

echo s:systemVimrcLocation

" fnamemodify here will just take the parent directory of $VIMRC with the
" filename removed.
echo finddir(fnamemodify($MYVIMRC, ":p:h") . "/.vim/bundle/vundle/")
echo finddir(fnamemodify(s:systemVimrcLocation, ":p:h") . "/.vim/bundle/vundle/")
echo fnamemodify(s:systemVimrcLocation, ":p:h") . "/vim/bundle/vundle/"

if strlen(finddir(fnamemodify($MYVIMRC, ":p:h") . "/.vim/bundle/vundle/")) ||
  \strlen(finddir(fnamemodify($MYVIMRC, ":p:h") . "/.vim/bundle/vundle/"))
   echo "OK"
endif

let mypath+=fnamemodify(s:systemVimrcLocation) . "/vim/bundle/vundle/"

